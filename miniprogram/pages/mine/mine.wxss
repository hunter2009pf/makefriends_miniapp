/* pages/mine/mine.wxss */

.container{
  height: 100%;
  width: 100%;
  padding-top: 0rpx;
  vertical-align: center;
}

.avatar{   
  height: 120rpx;    
  width: 120rpx;    
  border-radius: 96rpx;
}

.row{
  width: 100%;
  height: 200rpx;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
  /* 左右居中 */
  justify-content: center;
  /* 上下居中 */
  align-items: center;
}
/* 纵向布局 */
.column{
  height: 200rpx;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: column;
  /* 上下居中 */
  justify-content: center;
  /* 左右居中 */
  align-items: flex-start;
  margin-left: 16rpx;
}

/* 自适应宽度 */
.autoFullWidth {
  flex: 0.6;
  position: relative;
}

.statsRow{
  width: 100%;
  height: 200rpx;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
  justify-content: center;
  /* 上下居中 */
  align-items: center;
}

.stats{
  height: 160rpx;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: column;
  /* 上下居中 */
  justify-content: center;
  /* 左右居中 */
  align-items: center;
  margin-left: 16rpx;
  flex-grow: 1;
}

.basicInfo{
  margin-left: 48.rpx;
  margin-right: 48.rpx;
  height: 200rpx;
  background-color: blue; 
  border-radius: 16rpx; 
  padding: 16rpx;
}

.rightColumn{
  height: 200rpx;
  padding-left: 48rpx;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: column;
  /* 上下居中 */
  justify-content: center;
  /* 左右居中 */
  align-items: flex-start;
  margin-left: 16rpx;
}

.container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 10px;
}

.imageWrapper {
  flex-wrap: wrap;
  display: flex;
  position: relative;
  width: 80rpx;
  height: 80rpx;
}

.addImage {
  width: 100rpx;
  height: 100rpx;
  margin: 20% auto;
}

.imageRaw{
  width: 100%;
  height: 200rpx;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
  /* 左右居中 */
  justify-content: center;
  /* 上下居中 */
  align-items: center;
}

.logout{
  padding-top: 560rpx;
  text-align: center;
}
